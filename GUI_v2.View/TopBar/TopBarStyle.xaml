<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GUI_v2.View.TopBar">
    
    <SolidColorBrush x:Key ="TopBarBrush" Color="{StaticResource PrimaryColor}" Opacity="1"/>

    <SolidColorBrush x:Key="SensorStatusBorder" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SensorStatusBackground" Color="{StaticResource BackgroundColor}" Opacity="0.3"/>

</ResourceDictionary>