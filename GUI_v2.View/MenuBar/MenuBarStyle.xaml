<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:GUI_v2.View.MenuBar">
    <SolidColorBrush x:Key="MenuBarBackgroundBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="MenuBarButtonBackgroundColor" Color="{StaticResource SecondaryColor}" Opacity="1"/>
    <SolidColorBrush x:Key="MenuBarButtonOnHoverBackgroundBrush" Color="{StaticResource PrimaryDarker}"  />
    
    <SolidColorBrush x:Key="MenuBarButtonForegroundBrush" Color="{StaticResource OnSecondaryColor}"/>
    <SolidColorBrush x:Key="MenuBarButtonOnHoverForegroundBrush" Color="{StaticResource OnPrimaryColor}"/>
    
    <sys:Double x:Key="MenuButtonHeight">80</sys:Double>
    <sys:Double x:Key="MenuPanelWidth">300</sys:Double>
    <sys:Double x:Key="MenuPanelNegativeWidth">-300</sys:Double>
    <sys:Double x:Key="ManuPanelTopMargin">90</sys:Double>
</ResourceDictionary>