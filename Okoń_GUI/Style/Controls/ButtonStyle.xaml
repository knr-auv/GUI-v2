<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Okoń_GUI.Style.Controls">


    <SolidColorBrush x:Key="ButtonBackground" Color="{StaticResource ButtonBackgroundColor}"/>
    
    <SolidColorBrush x:Key="ButtonOnHoverBackground" Color="{StaticResource ButtonOnHoverColor}" Opacity="1"/>
    
    <SolidColorBrush x:Key="ButtonForeground" Color="{StaticResource OnPrimaryColor}" Opacity="1"/>
    <SolidColorBrush x:Key="ButtonOnHoverForeground" Color="{StaticResource OnPrimaryColor}" Opacity="0.9"/>
    <SolidColorBrush x:Key="ButtonStroke" Color="{StaticResource OnPrimaryColor}" Opacity="0.6"/>
    <SolidColorBrush x:Key="ButtonOnHoverStroke" Color="{StaticResource SecondaryColor}" Opacity="1"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="Gray" Opacity="0.5"/>

    <Thickness x:Key="ButtonStrokeThickness">0.8</Thickness>

</ResourceDictionary>