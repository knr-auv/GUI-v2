<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
>
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors2.xaml"/>
        <ResourceDictionary Source="SettingsDialogStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource OnSurfaceColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="Gray" Opacity="0.75"/>
    

    <sys:Double x:Key="TopBarHeight">80</sys:Double>






   
    


    <SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource SecondaryColor}"/>


</ResourceDictionary>